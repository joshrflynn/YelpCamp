<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-sm-8 offset-sm-2 col-md-6 offset-md-3">
    <form
      action="/campgrounds/<%=cg._id%>?_m=PUT"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div>
        <div class="mb-3">
          <div class="mb-3">
            <label class="form-label" for="title">Title:</label>
            <input
              class="form-control"
              type="text"
              name="campground[title]"
              id="title"
              value="<%= cg.title %>"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="location">Location:</label>
            <input
              class="form-control"
              type="text"
              name="campground[location]"
              id="location"
              value="<%= cg.location %>"
              required
            />
          </div>

          <div class="mb-3">
            <label class="form-label" for="price">Price:</label>
            <div class="input-group">
              <span class="input-group-text" id="price-label">$</span>
              <input
                name="campground[price]"
                type="number"
                class="form-control"
                id="price"
                value="<%= cg.price %>"
                required
                min="0"
              />
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="description">Description:</label>
            <textarea class="form-control" name="campground[description]" id="description" rows="3" required>
<%= cg.description %></textarea
            >
          </div>
          <div class="mb-3">
            <label for="formFileMultiple custom-file custom-file-label" class="form-label">Add More Images:</label>
            <input class="form-control" type="file" name="campground[image]" id="image" multiple />
          </div>
        </div>
        <div class="mb-3">
          <% cg.image.forEach((img, i) => { %>
          <img src="<%= img.thumbnail %>" alt="img" class="img-thumbnail" />
          <div class="form-check-inline">
            <input type="checkbox" name="deleteImages[]" id="image-<%= i %>" value="<%=img.filename%>" />
            <label for="image-<%= i %>">Delete?</label>
          </div>
          <% }) %>
        </div>
        <div class="mb-3">
          <button class="btn btn-outline-success" type="submit">Update Campground</button>
        </div>
      </div>
    </form>
    <a class="btn btn-outline-danger" href="/campgrounds/<%= cg._id %> ">Back to Campground</a>
  </div>
</div>
